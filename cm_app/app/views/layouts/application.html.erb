<!DOCTYPE html>
<html>
  <head>
    <title>Course Buddy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'>
    <link rel='stylesheet' href='./app/assests/stylesheets/application.css'>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
    <script src="https://code.highcharts.com/highcharts.src.js"></script>
    <script>
      $( function() {
        $( "#movable" ).draggable();
        handle: ".handle",
        iframeFix: true,
        start: function(event, ui) {
          $('.frameOverlay').show();
        },
        stop: function(event, ui) {
          $(".frameOverlay").hide();
        }
      } );
      
      $( function() {
        $( "#movable2" ).draggable();
        handle: ".handle",
        iframeFix: true,
        start: function(event, ui) {
          $('.frameOverlay').show();
        },
        stop: function(event, ui) {
          $(".frameOverlay").hide();
        }
      } );
      
      $( function() {
        $( "#movable3" ).draggable();
        handle: ".handle",
        iframeFix: true,
        start: function(event, ui) {
          $('.frameOverlay').show();
        },
        stop: function(event, ui) {
          $(".frameOverlay").hide();
        }
      } );
      
    </script>
    <script>
      var s = 0;
      var t;
      var timer_is_on = 0;
      var m = 0;
      var r = 0;
      
      function timedCount() {
        s = s + 1;
        t = setTimeout(timedCount, 1000);
        m = Math.floor(s / 60);
        r = s - (m * 60);
        $('p.txt').text(`${m}:${r.toString().padStart(2, '0')}`);
        
      }
      
      function startCount() {
        if (!timer_is_on) {
          timer_is_on = 1;
          timedCount();
        }
      }
      
      function stopCount() {
        clearTimeout(t);
        timer_is_on = 0;
        timeElapsed = s;
      }
    </script>

    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='background'>
    <div class='container pt-5'>
      <div class='col-3'> 
      <div class='topcorner'>
          <%= Time.now.in_time_zone("Central Time (US & Canada)").strftime("%I:%M %p") %>
      </div>
      <% if user_signed_in? %>
        <%= render "layouts/sidenav" %> 
        
       <% end %>
       
      </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      <div>
          <%= yield %>          
      </div>
    </div>
  </body>
  
  
</html>
