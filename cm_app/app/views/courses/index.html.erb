<div class="card">
  <div class="card-header">
    
    <h2 class='card-title d-flex justify-content-between'>
      <span>Courses</span>
      <%= link_to 'Add Course', new_course_path, class: 'btn btn-primary' %>
    </h2>
    
      <%= form_tag :courses, method: :get, class: "search" do %>
        <%= text_field_tag "q", params[:q] %>
        <%= submit_tag "search"%>
      <% end %>
    
    <% @courses.each do |course| %>
      <%= link_to course do %>
        <div class="card-fancy">
          <div class="card-body">
            <h5 class="card-title"><%= course.name %></h5>
            <p><%= course.description %></p>
          </div>
        </div>
        <% end %>
    <% end %>
  </div>
</div>
 
